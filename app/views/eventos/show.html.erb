<%- model_class = Evento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:disciplina_id) %>:</strong></dt>
  <dd><%= @evento.disciplina_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mestre_id) %>:</strong></dt>
  <dd><%= @evento.mestre_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:studio_id) %>:</strong></dt>
  <dd><%= @evento.studio_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @evento.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora_inicial) %>:</strong></dt>
  <dd><%= @evento.hora_inicial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora_final) %>:</strong></dt>
  <dd><%= @evento.hora_final %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              eventos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evento_path(@evento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              evento_path(@evento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
